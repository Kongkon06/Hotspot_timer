<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Outer shape with gradient (this will be your "stroke") -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="20dp"/>
            <gradient
                android:startColor="#40FFFFFF"
                android:endColor="#40000000"
                android:type="linear"
                android:angle="45" />
        </shape>
    </item>

    <!-- Inner shape (slightly smaller, creating the stroke effect) -->
    <item android:left="2dp" android:right="2dp" android:top="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <corners android:radius="18dp"/> <!-- Slightly smaller radius -->
            <solid android:color="#40000000"/> <!-- 25% opacity black -->
            <padding android:left="10dp" android:right="10dp" android:top="10dp" android:bottom="10dp"/>
        </shape>
    </item>
</layer-list>